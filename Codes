weight=int(input("Enter your weight please"))
unit=input("if in kilogram please enter 'k' if in pound please enter 'p'")
# unit=unit.lower;
if unit.upper()=="L":
  converted=weight*0.45
  print(f"You weight is {converted}")
elif unit.upper()=='P':
  converted=weight+100
  print(f"You weight is {converted}")



